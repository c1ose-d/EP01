<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Output.Background" Color="{StaticResource Transparent}"/>
    <SolidColorBrush x:Key="Output.Foreground" Color="{StaticResource White}"/>
    <Style x:Key="OutputStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        <Setter Property="Background" Value="{StaticResource Output.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource Output.Foreground}"/>
        <Setter Property="Margin" Value="16,0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="AllowDrop" Value="true"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>
</ResourceDictionary>